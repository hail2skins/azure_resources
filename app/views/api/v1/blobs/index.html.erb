<p id="notice"><%= notice %></p>

<h1>Blobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last modified</th>
      <th>Length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blobs.each do |blob| %>
      <tr>
        <td><%= blob.name %></td>
        <td><%= blob.last_modified %></td>
        <td><%= blob.length %></td>
        <td><%= link_to 'Show', blob %></td>
        <td><%= link_to 'Edit', edit_blob_path(blob) %></td>
        <td><%= link_to 'Destroy', blob, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

